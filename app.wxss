@import './iconfont/iconfont.wxss';
@import './animation//vivify.min.wxss';
@import './miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  font-size: 32rpx;
  color: #333
}
.flexCenter{
  display: flex;
  justify-content: center;
  align-items: center;
}
.flexCenterColum{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.flex-colum {
  display: flex;
  flex-direction: column;

}
.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}


/* 定位居中对齐 */
.postCenter{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
/* 阴影 */
.shadow{
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.08);
}
.Mask {
  background-color: #000;
  opacity: .5;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 文本隐藏 */
.text-hidden {
  overflow: hidden;
  display: -webkit-box;
  white-space: normal ;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.bottomTitle {
  text-align: center;
  color: #666;
  font-size: 28rpx;
}
.vant {
  display: flex;
  flex-direction: row-reverse;
}