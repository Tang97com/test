.bg{
  height: 400rpx;
  width: 100%;
  background: linear-gradient(0deg, #3CDFFF, #2F91FF);
  position: relative;
}

.bg-box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.bg-box .ahh {
  font-size: 240rpx;
  color:  #3CDFFF;
}

.bnlance{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #f1f1f1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bnlance text:first-child {
  padding-bottom: 20rpx;
}

.formBox{
  width: 95%;
  margin: 30rpx auto;
  box-sizing: border-box;
}

.formBox text{
  font-size: 28rpx;
  color: #2F91FF;
  padding-bottom: 30rpx;
  display: block;
}

.weui-input{
  padding: 20rpx 40rpx;
  border-radius: 5rpx;
  border: 1rpx solid #999;
  border-color: #66afe9;
  border-radius: 50rpx;
  outline: 0;
}

.txButtone{
   margin: 80rpx 0 0 0;
   background: linear-gradient(0deg, #3CDFFF, #2F91FF);
   color: #fff;
}