@import "/iconfont/iconfont.wxss";
@import "/animation/vivify.min.wxss";
.card{
  width: 95%;
  margin: 0 auto 40rpx auto;
  /* height: 400rpx; */
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.08);
  position: relative;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.ordertitle{
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #DDD2C7;
}
.ordertitle text:last-child {
  color: #568DC3;
}

.ordercontent{
  /* height: 240rpx; */
  margin-left: 40rpx;
  border-bottom: 1rpx solid #DDD2C7;
}
.info {
  padding: 10rpx 0 0 0;
}
.infos {
  padding-bottom: 10rpx;
}
.info text{
  margin-left: 40rpx;
}
.info text:first-child{
  margin-left: 0;
}

.recipient {
  padding-top: 20rpx;
}
.recipient-adress {
  width: 100%;
  padding: 10rpx 0 20rpx 0;
}

.money{
  color: #ee3322;
  text-align: right;
  padding: 20rpx 0 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
}

.line-map{
  position: absolute;
  left: 20rpx;
  top: 110rpx;
}

.custround{
  border-radius: 50%;
  font-size: 22rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
}
.icon-send{
  background-color: #2892DE;
}
.line{
  background-color: #DDD2C7;
  height: 100rpx;
  width: 3rpx;
}

.icon-closed{
  background-color: #E9C535;
}
.urgent{
  font-size: 80rpx;
  position: absolute;
  right: 30rpx;
  top: 75rpx;
  color: #ee3322;
  
}

.flex-column-around {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.flex-column-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-hidden {
  overflow: hidden;
  display: -webkit-box;
  white-space: normal ;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.two-text-hidden{
  overflow: hidden;
  display: -webkit-box;
  white-space: normal ;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

