  background-color: #66a6ff;
  color: #fff;
}
.list_card {
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.list_content {
  margin-left: 30rpx;
}
.list_content text {
  margin-bottom: 20rpx;
}
.content_top {
  /* height: 62rpx; */
