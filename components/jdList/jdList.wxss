}
.content_mid {
  width: 400rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
}
.money {
  color: rgb(255, 16, 16);
  font-size: 40rpx;
  font-weight: 600;
}
.flex-colum {
  display: flex;
  flex-direction: column;
}
.bottom {
  display: flex;
