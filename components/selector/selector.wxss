page{
  position: relative;
}
.picker-view{
  width: 100%; 
  height: 500rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 2;
}

.picker-view-item {
  text-align: center;
  line-height: 100rpx;
}

.btnsGroup{
  position: absolute;
  z-index: 5;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}

.btnsGroup text{
  /* background-color: red; */
  position: relative;
}

.btnsGroup text::after{
  content: '';
  position: absolute;
  top: -20rpx;
  right: -40rpx;
  bottom: -20rpx;
  left: -40rpx;
  /* background-color: blue; */
}



