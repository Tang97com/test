.manageContainer {
  padding: 32rpx;
}

.infoImg {
  width: 100%;
  height: 300rpx;

  margin-bottom: 6rpx;
}

.infoImg image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}


.infoContainer {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 450rpx;
}

.infoContainer .info {
  display: flex;
  align-items: center;
  flex: 1;
  width: 100%;
  border-bottom: 3rpx solid #ccc;
}

.infoContainer .info .iconfont {
  font-size: 38rpx;
}

.infoContainer .info text {
  white-space: nowrap;
}

.infoContainer .info input {
  width: 100%;
  margin-left: 20rpx;
  padding-left: 10rpx;
}

.notice {
  position: relative;
  widows: 100%;
  margin-top: 30rpx;
}

.notice textarea {
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 250rpx;

  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}

.bottom {
  width: 100%;
  margin-top: 100rpx;
}

.saveBtn {
  margin:auto;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  background: rgba(64, 158, 255, 1);
  border-radius: 20rpx;
}

