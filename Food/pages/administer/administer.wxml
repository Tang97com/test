<!-- 门店图片 -->
<view class="manageContainer">
    <!-- 上传门店图片 -->
  <view class="uploadText">上传门店图片</view>
    <view class="infoImg" bindtap="uploadImg">
      <image src="{{imgurl}}" mode="aspectFill">
      </image>
    </view>

  <!-- info详情 -->
  <view class="infoContainer">
    <view class="info">
      <text>地址:</text>
      <input type="text" />
      <i class="iconfont ahh icondingwei"></i>
    </view>
    <view class="info">
      <text>详细地址:</text>
      <input type="text" />
    </view>
    <view class="info">
      <text>联系电话:</text>
      <input type="text" />
    </view>
    <view class="info">
      <text>营业时间:</text>
      <input type="text" />
    </view>
    <view class="info">
      <text>起送费:</text>
      <input type="text"/>
    </view>
  </view>

  <!-- 公告区域 -->
  <view class="notice">
    <textarea placeholder="请输入公告内容" placeholder-style="font-weight: bold" maxlength="100">
      
    </textarea>

    <!-- save -->
    <view class="bottom">
      <view class="saveBtn">
        <text>保存</text>
      </view>
    </view>
  </view>
</view>