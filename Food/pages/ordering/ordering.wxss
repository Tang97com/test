.orderContainer {
  padding: 20rpx;
}
.infoImg {
  width: 100%;
  height: 300rpx;
  margin-bottom: 6rpx;
}
.infoImg image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}


/* 店铺名和公告 */

.Announcement {
  display: flex;
  flex-direction: column;
  background-color: antiquewhite;
}
.Announcement h2 {
  font-weight: bolder;
}
.Announcement text {
  font-size: 28rpx;
  word-wrap: break-all;
  padding-left: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 点餐 */

.TabsContent {
  padding-top: 30rpx;
}
.view-VTabs {
  height: 780rpx;
  padding-bottom: 120rpx;
}
.vtabs-content-item {
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 10rpx;
}
.food {
  display: flex;
  height: 200rpx;
}
.Introduction {
  display: flex;
  flex-direction: column;
  padding-left: 26rpx;
}
.Introduction span {
  font-weight: bolder;
}
.Introduction text {
  font-size: 28rpx;
  width: 250rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.iconfont {
  padding-top: 15rpx;
  width: 210rpx;
  display: flex;
  justify-content: space-between;
}
.iconfont text {
  color: #f95b5b;
}


/* 购物车 */

.shoppingCart {
  position: fixed;
  bottom: 20rpx;
  right: 10rpx;
  z-index: 999;
  height: 100rpx;
  line-height: 100rpx;
  width: 640rpx;
  border-radius: 50rpx;
  background-color: rgba(204, 204, 204, 0.7);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: space-between;
  padding-left: 40rpx;
}
.Amount text {
  padding-left: 20rpx;
  font-size: 32rpx; 
  line-height: 80rpx;
}
.Amount text text {
  color: #f11927;
}
.Settlement {
  font-size: 40rpx;
  color: #fff;
  width: 40%;
  background-color: #f11927;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}
.Settlement text {
  padding-left: 46rpx;
}


/* 商家展示页 */

.Merchant{
  padding: 20rpx;
  height: 50vh;
  position: relative;
}
.Merchant .address {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.information .category {
  font-weight: bolder;
}
.information .category text {
  font-weight: normal;
  color: #383838;
}
.information {
  display: flex;
  flex-direction: column;
}
.announcement text{
  font-weight: bold;
}
.AnnouncementContent {
  font-size: 30rpx;
  padding: 10rpx;
  padding-left: 10rpx;
}
.AnnouncementContent text {
  font-weight: normal;
}
.Merchant .button {
  display:block;
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  left: 0;
}