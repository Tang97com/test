
.NavContent {
  width: 100%;
  padding: 0 10rpx;
  height: 99vh;
  background-color: #f5f5f5;
}

.NavContent .ContentItem {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 3rpx 6rpx 6rpx #c8c8c8;
  overflow: hidden;
  padding: 20rpx;
  width: 91%;
  /* border: 1rpx solid #000; */
}

.NavContent .ContentItem .StoreDetails {
  width: 100%;
  height: 200rpx;
  padding-bottom: 4rpx;
  display: flex;
  position: relative;
}

.NavContent .ContentItem .commodity {
  display: flex;
  justify-content: space-between;
  width: 95%;
}

.NavContent .ContentItem .commodity view {
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-left: 10rpx;
  padding-right: 10rpx;
  width: 30%;
}

.NavContent .ContentItem .commodity view text {
  width: 100%;
  padding-left: 13.5rpx;
  padding-top: 10rpx;
  color: #ec4141;
  font-size: 25rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align: left;
}

.NavContent .ContentItem .Writing h2 {
  font-weight: bolder;
}

.NavContent .ContentItem .Writing {
  padding-left: 30rpx;
}

.NavContent .Detail {
  width: 360rpx;
  display: flex;
  justify-content: space-between;
}

.NavContent .Money {
  width: 280rpx;
  display: flex;
  justify-content: space-between;
}

.NavContent .Rebate {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  display: flex;
  height: 30rpx;
  line-height: 30rpx;
}

.NavContent .Rebate text {
  margin-left: 10rpx;
}

.NavContent .ContentItem text {
  font-size: 25rpx !important;
}