<!-- TabBar 附近推荐 -->
<import src="/common/PersonCenter/PersonCenter" />
<view class="center" wx:if="{{ active === 0 }}">
  <!-- 顶部 -->
  <view class="searchBar">
    <view class="school">
      <text>成都理工大学</text>
    </view>
    <van-search
      value="{{ value }}"
      shape="round"
      placeholder="请输入搜索关键词"
      bindtap="goToSearch"
      custom-class="Search_class"
    />
  </view>
  <view class="NavTab">
    <van-tabs active="{{ NavTab }}" sticky bind:change="onNavTab" tab-class="NavTab">
      <van-tab title="附近推荐">
        <scroll-view scroll-y class="NavContent" lower-threshold >
          <view class="ContentItem" wx:for="{{list}}" wx:for-item="item" wx:key="that" bindtap="getOrdering" data-id="{{item.id}}">
            <view class="imageDetail"  >
              <van-image width="150rpx" height="150rpx" fit="scale-down" src="{{item.url1}}" />
            </view>
            <view class="Writing">
              <h2>{{item.name}}</h2>
              <view class="Detail">
                <text>月售:{{item.num}}</text>
                <text>据您:{{item.distance}}km</text>
              </view>
              <view class="Money">
                <text>起送￥{{item.money}}</text>
                <text>人均￥15</text>
              </view>
              <view class="Rebate">
                <i class="ahh iconfanquan"></i>
                <text>返￥5.00</text>
              </view>
            </view>
          </view>
        </scroll-view>
      </van-tab>
      <van-tab title="热门推荐" bindtap="jiuzhe">
        <scroll-view scroll-y class="NavContent" lower-threshold >
          <view class="ContentWaterfalls">
            <view class="WaterfallsItem"  wx:for="{{hot}}" wx:for-item="item" wx:key="that" >
              <van-image width="100%" height="230rpx" fit="scale-down" src="{{hot.img}}" />
              <view class="Detail">
                <text class="title">{{item.fname}}</text>
                <view class="ProductInformation">
                  <text>月销：{{item.num}}</text>
                  <text>距离:{{item.distance}}km</text>
                </view>
                <text class="FoodPrice">￥{{item.money}}</text>
              </view>
            </view>
          </view>
        </scroll-view>
      </van-tab>
      <van-tab title="今日特价">
        <scroll-view scroll-y class="NavContent" lower-threshold >
          <view class="ContentWaterfalls"  wx:for="{{Rcommend}}" wx:for-item="item" wx:key="that">
            <view class="WaterfallsItem"  >
              <van-image width="100%" height="230rpx" fit="scale-down" src="{{item.img}}" />
              <view class="Detail">
                <text class="title">{{item.fname}}</text>
                <view class="ProductInformation">
                  <text>月销:{{item.xliang}}</text>
                  <text>距离:{{item.distance}}km</text>
                </view>
                <view class="SpecialOffer">
                  <view><text>￥{{item.discount_fee}}</text><text>￥{{item.money}}</text></view>
                  <span>抢</span>
                </view>
              </view>
            </view>
          </view>
        </scroll-view>
      </van-tab>
    </van-tabs>
  </view>
</view>
<view wx:if="{{ active === 1 }}">
  <template is="PersonCenter" data="{{iconItem, Icon, hasUserInfo, userInfo, TypesOf}}"></template>
</view>
<view wx:if="{{ active === 2 }}">
  <template is="PersonCenter" data="{{iconItem, Icon, hasUserInfo, userInfo, TypesOf}}"></template>
</view>

<view>
  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="home-o">首页</van-tabbar-item>
    <van-tabbar-item icon="manager-o">用户</van-tabbar-item>
    <van-tabbar-item icon="shop-o" bindtap="getStore">商家</van-tabbar-item>
    <van-tabbar-item bindtap="getMarik">
      <image
        slot="icon"
        src="{{icon.Distributor}}"
        mode="aspectFit"
        style="width: 60rpx; height: 42rpx;"
      />
      <image
      slot="icon-active"
      src="{{ icon.normal }}"
      mode="aspectFit"
      style="width: 60rpx; height: 42rpx;"
      />
      配送员
    </van-tabbar-item>
  </van-tabbar>
<view wx:if="{{flag}}">
  <view class="Mask" bindtap="changeFlag"></view>
  <pop nodes="{{protocol}}" bind:closer="changeFlag"></pop>
</view>
</view>