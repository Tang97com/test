/* 购物车 */
.cart-box {
  overflow: hidden;
  overflow-y: scroll;
  box-sizing: border-box;
  margin-bottom: 100rpx;
}

.cart-box .item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-bottom: 1px solid gainsboro;
}
.select-img-box{
  display: flex;
  align-items: center;
}

.cart-box .item .goods-info {
  margin-left: 20rpx;
}

.cart-box .goods-img {
  width: 160rpx;
  margin-left: 20rpx;
}

.cart-box .shop-name {
  margin-top: -20rpx;
  margin-left: 20rpx;
  font-weight: 900;
  font-family: PingFangSC-Semibold;
  font-size: 13px;
  color: #333;
  letter-spacing: 0;
}
