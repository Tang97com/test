.cart-box .row {
  color: #fff;
  display: flex;
  flex-direction: row;
  width: 430rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

goods-btn btn-minus
.cart-box {
  color: #999;
  font-size: 10rpx;
  width: calc(100% - 100rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cart-box .goods-name {
  color: #333;
  font-size: 13px;
}

.cart-box .goods-price {
  color: rgb(225,54,34);
  font-size: 32rpx;
}

.cart-box .goods-type {
  color: #666;
  font-size: 12px;
  margin-bottom: 20rpx;
}

.cart-box .num-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cart-box .goods-btn {
  width: 10rpx;
  height: 60rpx;
  padding: 0;
  line-height: 50rpx;
  font-weight: bold;
  color: gray;
  margin: 0;
  background: #333;
}

.cart-box .num {
  color:  #333333;
  width: 60rpx;
  text-align: center;
  font-size: 35rpx;
}

.cart-box .btn-add {
  font-size: 28rpx;
}

.cart-box .btn-minus {
  font-size: 28rpx;
}

.cart-box .btn-groups {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-end;
}

.cart-fixbar {
  position: fixed;
  bottom: 0;
  background: whitesmoke;
  height: 99rpx;
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cart-fixbar .allSelect {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}

.cart-fixbar .allSelect-text {
  color: grey;
  margin-left: 20rpx;
  font-size: 32rpx;
}

.cart-fixbar .count {
  margin-left: 50rpx;
  color: grey;
  background: whitesmoke;
  font-size: 32rpx;
}

.cart-fixbar .order {
  color: white;
  text-align: center;
  width: 100px;
  height: 98rpx;
  background-image: linear-gradient(-90deg, #de3021 0%, #ec5c31 100%);
  line-height: 100rpx;
  position: absolute;
  right: 0;
  padding: 0 40rpx;
  font-size: 32rpx;
}

.cart-fixbar .allnum {
  font-size: 24rpx;
}

.iconjian,
.iconjia {
  color: rgb(225,54,34);
}