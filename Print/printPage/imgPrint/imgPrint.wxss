page {
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.images image {
  text-align: center;
}









.mask {
  background-color: #000;
  opacity: .5;
  height: 600rpx;
  width: 100%;
  top: 0;
  left: 0;
  position: fixed;
  z-index: 2;
}

.imgBox {
  position: relative;
  top: 50rpx;
  left: 50%;
  transform: translate(-50%,-25rpx);
  z-index: 2;
  background-color: #fff;
  box-sizing: border-box;
  height: 550rpx;
  width: 500rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 1;
}

.content {
  width: 100%;
  position: relative;
  margin-top: 100rpx;
}

.num {
  margin: 40rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.num .ahh{
  font-size: 50rpx;
  font-weight: 500;
  color: #2F91FF;
}

.numbers {
  margin:  0 60rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
}
.fs {
  font-size: 24rpx;
  color: #999;
}
.sl {
  background-color: #e1e1e1;
  padding: 10rpx 25rpx;
  margin-bottom: 30rpx;
}

.next {
  padding: 10rpx 20rpx;
  background-color: #2F91FF;
  color: #fff;
  width: 140rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  margin: 0 auto;
}